# ============================================
# PostgreSQL Database Configuration
# ============================================
POSTGRES_DB=openproject
POSTGRES_USER=openproject
POSTGRES_PASSWORD=CambiaEstaContrasenaSegura123!
# Puerto externo para PostgreSQL (descomenta la línea de ports en docker-compose.yml si lo necesitas)
POSTGRES_PORT=5435

# ============================================
# OpenProject Configuration
# ============================================
# IMPORTANTE: Genera una clave secreta segura (mínimo 32 caracteres)
# Puedes usar: openssl rand -hex 32
# O ejecutar el script generate-secret.ps1
OPENPROJECT_SECRET_KEY_BASE=GENERA_UNA_CLAVE_SECRETA_LARGA_Y_SEGURA_AQUI_MINIMO_32_CARACTERES

# Hostname y puerto donde se accederá a OpenProject
OPENPROJECT_HOST__NAME=localhost:8082
OPENPROJECT_PORT=8082

# HTTPS habilitado (true/false)
OPENPROJECT_HTTPS=false

# ============================================
# OpenProject Admin User (Usuario Administrador Inicial)
# ============================================
# IMPORTANTE: Estos valores se usan SOLO en la primera instalación
# Si ya tienes OpenProject configurado, estos valores serán ignorados
OPENPROJECT_ADMIN_USER=admin
OPENPROJECT_ADMIN_PASSWORD=CambiaEstaContrasenaAdmin123!
OPENPROJECT_ADMIN_EMAIL=admin@tudominio.com
